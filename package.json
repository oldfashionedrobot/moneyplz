{
  "name": "track",
  "description": "track monorepo",
  "workspaces": [
    "./packages/track-client",
    "./packages/track-server"
  ],
  "scripts": {
    "start": "concurrently -k \"npm:start:*\"",
    "start:server": "npm run start -w track-server",
    "start:client": "npm run start -w track-client",
    "build": "npm run build -w track-server && npm run build -w track-client"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0"
  }
}
